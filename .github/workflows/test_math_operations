name: test        # ワークフローの名前

on: push          # このワークフローを push イベントで実行

jobs:             # 実行するジョブのリスト
  test:           # 'test' ジョブの定義
    runs-on: ubuntu-latest   # Ubuntu の最新バージョンで実行
    steps:                   # 手続きのリスト
      - uses: actions/checkout@v3  # リポジトリの内容をチェックアウト
      - name: Set up Python  # Python のセットアップ
        uses: actions/setup-python@v4
        with:
          python-version: '3.x'  # Python のバージョンを指定（必要に応じて変更）
      - name: Install dependencies  # 依存関係のインストール（例: pytest）
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt  # 必要なパッケージをインストール
      - name: Run tests        # テストの実行
        run: bash -xv ./test_math_operations.bash  # シェルスクリプトを実行

